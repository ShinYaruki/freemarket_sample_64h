.single-container
  %header.single-header
    %h1
      = link_to root_path do
        = image_tag "logo-1.svg", alt: "mercari"
  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", signup_index_path
      .login-form-inner
        = link_to user_facebook_omniauth_authorize_path, method: :post, id:"facebook-login", class:"btn-default btn-sns btn-sns-facebook" do
          %i.icon-facebook
          Facebookで登録する
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, id:"google-login",class:"btn-default btn-sns btn-sns-google" do
          Googleで登録する
      %form{action: "https://www.mercari.com/jp/login/", method: "POST", novalidate: "novalidate"}
        .login-form-inner
          .form-group
            %input.login-input-text.input-default{name: "email", placeholder: "メールアドレス", type: "email", value: ""}/
          .form-group
            %input.login-input-text.input-default{name: "password", placeholder: "パスワード", type: "password"}/
          .form-group
            .g-recaptcha.login-captcha{"data-sitekey": ""}
          %button.login-submit.btn-default.btn-red{type: "submit"} ログイン
          %input{name: "login_callback", type: "hidden", value: "/jp/"}/
          %input{name: "__csrf_value", type: "hidden", value: ""}/
          = link_to "パスワードをお忘れの方", root_path
    %form#login_form_facebook{action: "/jp/login/", method: "POST", novalidate: "novalidate"}
    %form#login_form_google{action: "/jp/login/", method: "POST", novalidate: "novalidate"}
    %input#google_client_id{type: "hidden", value: ""}/
    %input#facebook_app_id{type: "hidden", value: "466308336793848"}/

= render "footer"