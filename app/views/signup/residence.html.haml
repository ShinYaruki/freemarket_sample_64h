.single-container
  %header.single-header
    %h1
      = link_to root_path do
        = image_tag "logo-1.svg" , alt: "mercari"
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.active
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .single-main
    .l-single-container
      .l-chapter-container
        %h2.l-chapter-head 発送元・お届け先住所登録
        = form_for @address, url: signup_create_path , method: :post, html: {class: 'l-single-inner registration-form'} do |f|
          .l-single-content
            .form-group
              = f.label :郵便番号
              %span.form-require 必須
              = f.text_field :zip_code, placeholder: '例) 123-4567', value: session[:zip_code], class:"input-default"
            .form-group
              = f.label :都道府県
              %span.form-require 必須
              = f.select :prefecture, Prefecture.prefecture_areas.keys,{} ,class:"input-default"
            .form-group
              = f.label :市区町村
              %span.form-require 必須
              = f.text_field :city, placeholder: '例)横浜市緑区', value: session[:city], class:"input-default"
            .form-group
              = f.label :番地
              %span.form-require 必須
              = f.text_field :number, placeholder: '例)青山1-1-1', value: session[:number], class:"input-default"
            .form-group
              = f.label :建物名
              %span 任意
              = f.text_field :building, placeholder: '例)柳ビル102', value: session[:building], class:"input-default"
            .form-group
              .form-group
              = f.submit '次へすすむ', class: 'btn-default btn-red'

= render "footer"