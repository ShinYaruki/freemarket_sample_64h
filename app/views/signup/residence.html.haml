.container
  .header
    %h1 mercari (icon挿入)
    .nav
      %ul.nav_contnet
        %li 会員情報
        %li 電話番号認証
        %li お届け先住所入力
        %li 支払い情報
        %li 完了
  .main
    .main-header
      %h2 発送元・お届け先住所登録
    .main-form
      = form_for @address, url: signup_index_path, method: :post, html: {class: 'forth-main-wrapper__box'} do |f|
        .form-group
          = f.label :郵便番号
          %span 必須
          = f.text_field :zip_code, placeholder: '例) 123-4567', value: session[:zip_code]
        .form-group
          = f.label :都道府県
          %span 必須
          = f.text_field :prefecture, placeholder: '現状テキスト型', value: session[:prefecture]
        .form-group
          = f.label :市区町村
          %span 必須
          = f.text_field :city, placeholder: '例)横浜市緑区', value: session[:city]
        .form-group
          = f.label :番地
          %span 必須
          = f.text_field :number, placeholder: '例)青山1-1-1', value: session[:number]
        .form-group
          = f.label :建物名
          %span 任意
          = f.text_field :building, placeholder: '例)柳ビル102', value: session[:building]
        .form-group
          .form-group
          = f.submit '次へすすむ', class: 'form__submit'

  .footer
    .nav
      %ul.nav_contnet
        %li プライバシーポリシー
        %li メルカリ利用規約
        %li 特定商取引に関する表記
    .footer-logo
      %img{src:""}
      %p © Mercari, Inc.



