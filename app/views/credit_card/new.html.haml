.single-container
  %header.single-header
    %h1
      = link_to root_path do
        = image_tag "logo-1.svg", alt: "mercari"
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.active
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status

  .single-main
    .l-single-container
      .l-chapter-container
        %h2.l-chapter-head  クレジットカード情報の入力
        = form_tag(pay_credit_card_index_path, method: :post, id: 'charge-form',  name: "inputForm", class:"l-single-inner registration-form", id:"add-card-form") do
          .l-single-content
            .form-group
              %label カード番号
              %span.form-require 必須
              = text_field_tag "number", "", class: "input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "payment_card_no"
              %br
              %ul.signup-card-list
                %li
                  = image_tag "", alt: "", height: "20", width: "49"
                %li
                  = image_tag "", alt: "", height: "20", width: "34"
                %li
                  = image_tag "", alt: "", height: "20", width: "30"
                %li
                  = image_tag "", alt: "", height: "20", width: "32"
                %li
                  = image_tag "", alt: "", height: "20", width: "21"
                %li
                  = image_tag "", alt: "", height: "20", width: "32"
                %li
                  = image_tag "", alt: "", height: "20", width: "32"
            .form-group.signup-form-expire
              %label 有効期限
              %span.form-require 必須
              %br/
              .select-wrap.half
                %select#payment_card_expire_mm.select-default{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %i.icon-arrow-bottom
                %span 月
              .select-wrap.half
                %select#payment_card_expire_yy.select-default{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %i.icon-arrow-bottom
                %span 年
              %ul#expire-mm-error-wrapper.has-error-text
              %ul#expire-yy-error-wrapper.has-error-text
            .form-group
              %label セキュリティコード
              %span.form-require 必須
              = text_field_tag "cvc", "", class: "input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "payment_card_security_code"
              #card_token
              = submit_tag "追加する", id:"submit-button", class:"btn-default btn-red"
  
= render "footer"